{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "alembic: create",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "alembic",
                "revision",
                "--autogenerate",
                "-m",
                "\"${input:alembic_msg}\""
            ],
            "problemMatcher": []
        },
        {
            "label": "alembic: upgrade head",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "alembic",
                "upgrade",
                "head"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "alembic_msg",
            "type": "promptString",
            "description": "Enter alembic revision message",
            "default": "new migration"
        }
    ]
}